{
  "name": "blocktrap",
  "version": "1.0.0",
  "description": "Discord Bot",
  "main": "index.js",
  "scripts": {
    "test": "ts-node-dev --respawn --transpile-only --poll ./src/index.ts",
    "lint": "prettier --write .",
    "build": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HazimAr/BlockTrap.git"
  },
  "author": "HazAr and Niko",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/HazimAr/BlockTrap/issues"
  },
  "homepage": "https://github.com/HazimAr/BlockTrap#readme",
  "dependencies": {
    "@types/node": "^14.14.22",
    "consola": "^2.15.1",
    "discord-akairo": "github:1Computer1/discord-akairo",
    "discord.js": "^12.5.1",
    "glob": "^7.1.6"
  },
  "keywords": [],
  "husky": {
    "hooks": {
      "pre-commit": "yarn dlx @yarnpkg/doctor && lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": "prettier --write",
    "*.js": "prettier --write"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ],
    "rules": {
      "scope-case": [
        2,
        "always",
        "pascal-case"
      ],
      "type-enum": [
        2,
        "always",
        [
          "chore",
          "build",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test"
        ]
      ]
    }
  },
  "devDependencies": {
    "@types/glob": "^7"
  }
}
